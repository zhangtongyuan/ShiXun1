<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mima_back"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:paddingRight="10dp"
            android:src="@drawable/cpt_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:text="设置密码"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/mima_tv_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="短信已发送至  13141234962 " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="验证码  " />

        <EditText
            android:id="@+id/mima_ed_shuru"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@null"
            android:hint="请输入验证码"
            android:maxLength="4"
            android:textSize="14sp" />

        <Button
            android:id="@+id/mima_bt_huoqu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#EDA200"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/mima_tv_yuyin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="你也可以尝试 获取语音验证码"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="设置新密码    "
            android:textSize="14sp" />

        <EditText
            android:id="@+id/next_ed_password"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:background="@null"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:maxLength="11"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="再输入一次    "
            android:textSize="14sp" />

        <EditText
            android:id="@+id/next_ed_password1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:background="@null"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:maxLength="11"
            android:textSize="12sp" />
    </LinearLayout>


    <Button
        android:id="@+id/mima_bt_tijiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#EDA200"
        android:text="提交" />
</LinearLayout>
