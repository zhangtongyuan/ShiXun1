<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/cancel_view_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/start_spots"
            style="@style/AutoWrapTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始识别"
            android:textSize="12sp" />"
        <!--    <TextView
                android:id="@+id/stop_spots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AutoWrapTv"
                android:textSize="12sp"
                android:text="暂停识别" />-->
        <TextView
            android:id="@+id/show_rect"
            style="@style/AutoWrapTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示扫描框" />

        <TextView
            android:id="@+id/hidden_rect"
            style="@style/AutoWrapTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐藏扫描框"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cancel_view_linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp">

        <TextView
            android:id="@+id/scan_barcode"
            style="@style/AutoWrapTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="长方形扫描框"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/scan_qrcode"
            style="@style/AutoWrapTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="正方形扫描框"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/open_flashlight"
            style="@style/AutoWrapTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="开灯"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/close_flashlight"
            style="@style/AutoWrapTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关灯"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>
